<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/profile_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#4f353c"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg2"
                android:padding="2dp"
                android:text="Edit"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg2"
                android:padding="2dp"
                android:text="Logout "
                android:textColor="#ffffff" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/profile_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/profile_bar"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/iphoto_icon" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_bar"
            android:layout_toRightOf="@id/profile_photo"
            android:text="Karan Rajpal"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ticket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profile_photo"
            android:text="Ticket Id : "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ticket_number"
            android:text="qqqqwwww44"
            android:textColor="#eeeeee"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/team_of_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticket_number"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profile_photo"
            android:text="Team : "
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticket_number"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/team_of_text"
            android:text="Gryffindor"
            android:textColor="#eeeeee"
            android:textSize="16dp" />

        <Button
            android:layout_width="fill_parent"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/profile_photo"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_name" 
            android:layout_alignParentRight="true"
            android:id="@+id/editteam"
            android:text="Edit Team"
            android:background="@drawable/button_bg2"/>

        <View
            android:id="@+id/line_break"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/editteam"
            android:layout_marginTop="12dp"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/user_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_break"
            android:layout_margin="5dp"
            android:text="Description "
            android:textColor="#b6b4fe"
            android:textSize="25dp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/user_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_description_text"
            android:paddingLeft="10dp"
            android:text="dummy text"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/class_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_description"
            android:layout_margin="5dp"
            android:text="Class/Section"
            android:textColor="#b6b4fe"
            android:textSize="25dp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/user_class_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_text"
            android:paddingLeft="10dp"
            android:text="dummy text"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_class_text"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="Chosen food"
            android:textColor="#b6b4fe"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>

        <TextView
            android:id="@+id/user_food_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_text"
            android:paddingLeft="10dp"
            android:text="dummy text"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tshirt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_food_text"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="Tshirt chosen"
            android:textColor="#b6b4fe"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_tshirt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tshirt_text"
            android:paddingLeft="10dp"
            android:text="dummy text"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>