<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/projectdetailstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:layout_marginBottom="20dp"
            android:text="Project Details"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/projectinfotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectdetailstext"
            android:layout_margin="2dp"
            android:text="You can update this information on the day of the event only"
            android:textColor="#ffffff"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/projectnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectinfotext"
            android:layout_margin="2dp"
            android:text="Project Name* "
            android:textColor="#b6b4fe"
            android:textSize="19dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/projectname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectnametext" />

        <TextView
            android:id="@+id/projectdescriptiontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/projectname"
            android:layout_margin="2dp"
            android:layout_marginTop="20dp"
            android:text="Project Description*  "
            android:textColor="#b6b4fe"
            android:textSize="19dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/projectdesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:gravity="top"
            android:layout_below="@id/projectdescriptiontext" />

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/projectdesc"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_bg3"
            android:padding="3dp"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="Update" />
    </RelativeLayout>

</ScrollView>